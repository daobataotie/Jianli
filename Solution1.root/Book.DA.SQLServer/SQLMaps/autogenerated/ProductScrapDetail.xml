    <!-- select by primary key -->
    <select id="select_by_primary_key" resultMap="ProductScrapDetailResult" parameterClass="ProductScrapDetail">
      <![CDATA[SELECT
				[ProductScrapDetailId],
				[ProductScrapId],
				[ProductId],
				[ScrapQuantity],
				[DepotPositionId],
				[Note]
			FROM
